<div id="ankieta">
<h1>Rejestracja</h1>

  <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :Imię %><br />
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :Nazwisko %><br />
        <%= f.text_field :surname, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :Mail %><br />
        <%= f.text_field :mail, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :Hasło %><br />
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :gatunki %><br />
        <%= f.text_field :favourite, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit "Zapisz dane", class: "btn btn-primary form-control" %>
      </div>
  <% end %>
<%= link_to 'Back', users_path %>
</div>




